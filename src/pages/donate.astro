---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Donasi">
  <!-- Hero Section -->
  <section class="relative h-[300px] flex items-center justify-center text-white">
    <img
      src="https://picsum.photos/id/110/5000/3333"
      alt="Masjid"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    <div class="relative text-center">
      <h1 class="text-4xl font-bold mb-4">Donasi untuk Masjid Ar-Rahman</h1>
      <p class="text-lg">Bantu kami membangun dan memelihara masjid.</p>
    </div>
  </section>

  <!-- Card Pilihan Donasi Section -->
  <section class="container mx-auto py-16 px-4">
    <h2 class="text-3xl font-bold text-primary text-center mb-8">Pilih Program Donasi</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Card 1: Pembangunan Masjid -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
        <img
          src="https://picsum.photos/id/1080/800/600"
          alt="Pembangunan Masjid"
          class="w-full h-48 object-cover"
        />
        <div class="p-6 flex flex-col flex-grow">
          <h3 class="text-xl font-bold text-primary mb-4">Pembangunan Parkiran Masjid</h3>
          <p class="text-gray-700 mb-4">Bantu kami membangun parkiran yang lebih luas dan nyaman untuk jamaah masjid.</p>
          <div class="mb-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-gray-600">Terkumpul</span>
              <span class="text-sm text-gray-600">65%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-secondary h-2 rounded-full" style="width: 65%"></div>
            </div>
          </div>
          <p class="text-sm text-gray-600 mb-4">Batas Donasi: 31 Desember 2023</p>
          <div class="mt-auto">
            <button
              class="w-full bg-primary text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition duration-300"
            >
              Donasi Sekarang
            </button>
          </div>
        </div>
      </div>

      <!-- Card 2: Renovasi Masjid -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
        <img
          src="https://picsum.photos/id/1081/800/600"
          alt="Renovasi Masjid"
          class="w-full h-48 object-cover"
        />
        <div class="p-6 flex flex-col flex-grow">
          <h3 class="text-xl font-bold text-primary mb-4">Renovasi Masjid</h3>
          <p class="text-gray-700 mb-4">Bantu kami dalam upaya renovasi masjid agar lebih nyaman dan indah untuk beribadah.</p>
          <div class="mb-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-gray-600">Terkumpul</span>
              <span class="text-sm text-gray-600">40%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-secondary h-2 rounded-full" style="width: 40%"></div>
            </div>
          </div>
          <p class="text-sm text-gray-600 mb-4">Batas Donasi: 15 Januari 2024</p>
          <div class="mt-auto">
            <button
              class="w-full bg-primary text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition duration-300"
            >
              Donasi Sekarang
            </button>
          </div>
        </div>
      </div>

      <!-- Card 3: Operasional Masjid -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
        <img
          src="https://picsum.photos/id/1082/800/600"
          alt="Operasional Masjid"
          class="w-full h-48 object-cover"
        />
        <div class="p-6 flex flex-col flex-grow">
          <h3 class="text-xl font-bold text-primary mb-4">Operasional Masjid</h3>
          <p class="text-gray-700 mb-4">Dukung operasional harian masjid, termasuk biaya listrik, air, dan kebersihan.</p>
          <div class="mb-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-gray-600">Terkumpul</span>
              <span class="text-sm text-gray-600">80%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-secondary h-2 rounded-full" style="width: 80%"></div>
            </div>
          </div>
          <p class="text-sm text-gray-600 mb-4">Batas Donasi: 30 November 2023</p>
          <div class="mt-auto">
            <button
              class="w-full bg-primary text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition duration-300"
            >
              Donasi Sekarang
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>